@model OtoKiralama.Models.Car

@{
    ViewBag.Title = "Araç Düzenle";
}

<h2>Araç Düzenle</h2>
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Marka:</label>
        <input asp-for="Brand" required />
    </div>
    <div>
        <label>Model:</label>
        <input asp-for="CarModel" required />
    </div>
    <div>
        <label>Yıl:</label>
        <input asp-for="Year" type="number" required />
    </div>
    <div>
        <label>Plaka:</label>
        <input asp-for="PlateNumber" required />
    </div>
    <div class="form-group">
        <label for="photo">Araç Fotoğrafı</label>
        <input type="file" name="photo" class="form-control" />
    </div>
    @if (Model.PhotoPath != null)
    {
        <div>
            <img src="@Model.PhotoPath" alt="Araç Fotoğrafı" style="max-width:200px;max-height:200px;" />
        </div>
    }
    <div>
        <label>Müsait mi?</label>
        <input asp-for="IsAvailable" type="checkbox" />
    </div>
    <button type="submit">Kaydet</button>
</form>
<a href="@Url.Action("Index", "Car")">Listeye Dön</a>
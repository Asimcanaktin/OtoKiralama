@{
	ViewBag.Title = "Ana Sayfa";
}
<style>
	body {
		background: linear-gradient(135deg, #1abc9c 0%, #3498db 100%);
		min-height: 100vh;
		margin: 0;
		padding: 0;
	}

	.ana-baslik {
		color: #fff;
		text-align: center;
		margin-top: 40px;
		font-size: 2.5rem;
		font-weight: bold;
		text-shadow: 2px 2px 8px #2980b9;
	}

	.ana-fotolar {
		display: flex;
		justify-content: center;
		align-items: center;
		margin-top: 30px;
		gap: 40px;
	}

		.ana-fotolar img {
			width: 220px;
			height: 130px;
			object-fit: cover;
			border-radius: 15px;
			box-shadow: 0 4px 16px rgba(52,152,219,0.3);
			border: 4px solid #1abc9c;
			background: #fff;
		}

	.ana-aciklama {
		color: #fff;
		text-align: center;
		margin-top: 30px;
		font-size: 1.2rem;
		background: rgba(52,152,219,0.2);
		padding: 20px;
		border-radius: 10px;
		width: 60%;
		margin-left: auto;
		margin-right: auto;
	}

	.iletisim {
		color: #fff;
		text-align: center;
		margin-top: 30px;
		font-size: 1.1rem;
		background: rgba(26,188,156,0.2);
		padding: 15px;
		border-radius: 10px;
		width: 40%;
		margin-left: auto;
		margin-right: auto;
	}

	.ana-linkler {
		text-align: center;
		margin-top: 30px;
	}

		.ana-linkler a {
			color: #fff;
			background: #3498db;
			padding: 10px 18px;
			border-radius: 8px;
			margin: 0 8px;
			text-decoration: none;
			font-weight: bold;
			transition: background 0.2s;
			display: inline-block;
		}

			.ana-linkler a:hover {
				background: #1abc9c;
			}
</style>

</div>
<div class="ana-linkler">
	<a href="@Url.Action("Index", "Car")">Araç Listesi</a>
	<a href="@Url.Action("Create", "Car")">Araç Ekle</a>
	<a href="@Url.Action("Index", "Reservation")">Rezervasyonlar</a>
	<a href="@Url.Action("Login", "Account")">Giriş Yap</a>
	<a href="@Url.Action("Register", "Account")">Kayıt Ol</a>
</div>
